@model PlayQuizVM
<div class="container">
    <h1>Добре дојде на квизор @Model?.Quiz?.Name</h1>
    <p>Тестирај си го знаењето и забавувај се!!</p>
    <div class="row">

        <div class="col-6">
            <a asp-controller="PlayQuiz" asp-action="ChooseQuestion" asp-route-quizId="@Model?.Quiz.Id" asp-route-firstCall="true" class="btn btn-success">Започни игра</a>
        </div>

        <div class="col-6">
            @if (Model.Event == null)
            {
                <a asp-area="User" asp-controller="Quiz" asp-action="Index" class="btn btn-danger">Врати се назад</a>
            }else
            {
                <a asp-area="User" asp-controller="Event" asp-action="Index" class="btn btn-danger">Врати се назад</a>
            }
        </div>


    </div>
</div>
