@model Event

<style>
    body {
        background: linear-gradient(135deg, #f0f2f5, #e0eafc);
        font-family: 'Segoe UI', sans-serif;
    }

    .event-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .event-card {
        width: 100%;
        max-width: 420px;
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.85);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 45px rgba(0, 0, 0, 0.15);
    }

    .event-card img {
        object-fit: cover;
        height: 240px;
        width: 100%;
    }

    .event-card .card-body {
        padding: 1.5rem;
    }

    .event-card .card-title {
        font-size: 1.6rem;
        font-weight: bold;
        color: #1d3557;
        margin-bottom: 0.8rem;
    }

    .event-card .card-text {
        font-size: 1rem;
        color: #343a40;
    }

    .event-card .list-group-item {
        padding: 1rem 1.5rem;
        background: transparent;
        border: none;
        border-top: 1px solid #e3e3e3;
        font-size: 1rem;
    }

    .event-card .list-group-item strong {
        color: #0d6efd;
        font-weight: 600;
    }

    .table-modern th,
    .table-modern td {
        color: #212529; /* Bootstrap's default dark text */
    }

    .list-group-item {
        /* existing styles... */
        color: #212529; /* Bootstrap's default dark text */
    }


</style>

