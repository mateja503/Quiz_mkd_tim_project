@model RangListVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-6 text-center">
                <h2 class="text-white py-2">Додади поени на @Model.User.NameUser @Model.User.Surname</h2>
            </div>
            <div class="col-6 text-center">
                <h2 class="text-white py-2">За настан @Model.Event.Name</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" name="eventId" value="@Model.Event.Id" />
            <input type="hidden" name="userId" value="@Model.User.Id" />

            <div class="border p-3 mt-4">
               
                @foreach(var categoryUser in Model.CategoryUsers)
                {

                    <div class="mb-3 row p-1">
                        <label class="p-0">@categoryUser.Category.categoryName</label>
                        <input asp-for="@categoryUser.Points" class="form-control" value="@categoryUser.Points" />
                    </div>
                }

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Додади</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="RangList" asp-action="Index" asp-route-eventId="@Model.Event.Id" class="btn btn-outline-secondary border form-control">Врати се назад</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
