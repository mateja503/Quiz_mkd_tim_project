@model QuizVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Едитирај Kвиз</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Quiz.Id" type="hidden"/>
            <input asp-for="Quiz.ImageUrl" type="hidden" />

            <div class="border p-3 mt-4">
                <div class="mb-3 row p-1">

                    <label asp-for="Quiz.Name" class="p-0"></label>
                    <input asp-for="Quiz.Name" class="form-control" />
                    <span asp-validation-for="Quiz.Name" class="text-danger"></span>
                </div>




                <div class="mb-3 row p-1">
                    <label asp-for="Quiz.ImageUrl" disabled class="p-0"></label>
                    <input type="file" name="file" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.Quiz.ImageUrl))
                    {
                        <img src="@Model.Quiz.ImageUrl" alt="Image" class="img-fluid" />
                    }
                </div>


                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Промени</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="User" asp-controller="Quiz" asp-action="Index" class="btn btn-outline-secondary border form-control">Врати се назад</a>
                    </div>
                </div>

                @if (Model.Quiz.Id != 0)
                {
                    <div class="mb-3 row p-1">
                        <label class="p-0">Прашања</label>

                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Question" asp-action="Create" asp-route-id="@Model.Quiz.Id" class="btn btn-primary border form-control">Додади прашања</a>
                        </div>

                        <div class="col-6 col-md-3">
                            <a asp-area="Admin" asp-controller="Quiz" asp-action="ExcelFileReader" asp-route-quizId="@Model.Quiz.Id" class=" btn btn-primary border form-control">Прикачи Excel документ</a>
                        </div>

                    </div>
                }


            </div>
        </form>
    </div>
</div>
