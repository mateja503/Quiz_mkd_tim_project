@model IEnumerable<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Листа Типови на Категории</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Додади нова Категорија</a>

        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Категорија</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item?.categoryName</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item?.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Едитирај
                            </a>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item?.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Избриши
                            </a>
                        </div>

                    </td>

                </tr>
            }

        </tbody>

    </table>
