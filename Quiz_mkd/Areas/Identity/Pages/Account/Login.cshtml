@page
@model LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<div class="login-container">
    <div class="login-box">
        <h2>Login</h2>
        <form id="account" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="validation-summary text-danger" role="alert"></div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Username" />
                <label asp-for="Input.Email">Username</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="login-button">Log in</button>
        </form>
    </div>
</div>

<style>
    body {
        margin: 0;
        background: linear-gradient(135deg, #375a7f, #3399ff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        color: #333;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
    }

    .login-box {
        background-color: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

        .login-box h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 1.5rem;
        }

    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

        .form-floating input.form-control {
            width: 100%;
            padding: 1rem;
            border: 1.5px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
        }

        .form-floating label {
            position: absolute;
            top: -10px;
            left: 10px;
            background: white;
            padding: 0 5px;
            font-size: 0.85rem;
            color: #555;
        }

    .login-button {
        display: block;
        margin: 1rem auto 0 auto;
        padding: 0.9rem 2rem;
        font-size: 1.1rem;
        font-weight: bold;
        background-color: #375a7f !important;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }



        .login-button:hover {
            background-color: rgba(var(--bs-primary-rgb),var(--bs-bg-opacity)) !important;
        }
</style>