@model IEnumerable<TypeQuiz>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Листа Типови на Квизови</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="TypeQuiz" asp-action="Create"  class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Додади нов Тип на Квиз</a>

        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Тип</th>
                <th>Квиз</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item?.Type</td>
                    @{
                        string text = " ";
                    }
                    @foreach (var quiz in item?.QuizList)
                    {
                        text += quiz?.Name+", ";
                    }
                    <td>@text</td>
                  

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TypeQuiz" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Едитирај
                            </a>
                            <a asp-controller="TypeQuiz" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Избриши
                            </a>
                        </div>

                    </td>

                </tr>
            }

        </tbody>

    </table>
