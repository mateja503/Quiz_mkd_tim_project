<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MKA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/quiz-list.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/welcome-to-quizz.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/add-quiz.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit-quiz.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/quiz-details.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/question.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/soopstenija.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rang-list.css" asp-append-version="true" />

    
    
    
@*     <link rel="stylesheet" href="~/Quiz_mkd.styles.css" asp-append-version="true" />
 *@</head>
<body style="background:#e9edf5">
    <header>
        <nav @* class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" *@ class="navbar navbar-expand-lg " style="background-color:#003463;" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MKA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Дома</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="ForUs" asp-action="Index">За нас</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="ForTheAccociation" asp-action="Index">За Асоцијација</a>
                        </li>
                        
                      @*   <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Answer" asp-action="Index">Одговори</a>
                        </li> *@


                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="Event" asp-action="Index">Настани</a>
                        </li>
                        

                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="Quiz" asp-action="Index">Квиз</a>
                        </li>
                       

                        <li class="nav-item">
                            <a class="nav-link" asp-area="User" asp-controller="RangList" asp-action="Index">Ранг Листа</a>
                        </li>

                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Admin" asp-controller="TypeQuestion" asp-action="Index">Тип на Квиз</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Email" asp-action="Create">Прати Маил</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Категорија</a>
                            </li>


                        }
                      
                    </ul>
                    
                    <partial name="_LoginPartial"/>

                </div>
            </div>
        </nav>
    </header>
    <div >
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-dark">
            &copy; 2025 - Quiz_mkd - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
