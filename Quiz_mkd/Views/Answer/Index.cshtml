@model IEnumerable<Answer>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">AnswerList</h2>
        </div>

        <div class="col-6 text-end">
            <a href="#" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Додади нов одговор</a>

        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Прашање</th>
                <th>Одговор</th>
                <th>Точен</th>
                        <th></th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item?.Question?.Text</td>
                    <td>@item?.Text</td>
                    @if (item?.isCorrect == true)
                    {
                        <td>Точен</td>
                    }
                    else
                    {
                        <td>Неточен</td>
                    }

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a href="#" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Едитирај
                            </a>
                            <a href="#" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Избриши
                            </a>
                        </div>

                    </td>

                </tr>
            }

        </tbody>

    </table>
